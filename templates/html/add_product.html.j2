{% extends "html/base.html.j2" %}

{% block content %}
    <h1>Zaloguj</h1>
    <form action="" method="post" novalidate>
        {{ form.hidden_tag() }}
        <p>
            {{ form.name.label }}<br>
            {{ form.name(size=32) }}
        </p>
        <p>
            {{ form.net_price.label }}<br>
            {{ form.net_price(size=32) }}
        </p>
        <p>
            {{ form.vat.label }}<br>
            {{ form.vat(size=32) }}
        </p>

        <p>{{ form.submit() }}</p>
        <table>
        <tr>
        <th></th>
        <th>Imie</th>
        <th>Nazwisko</th>
        </tr>
        {% for person in persons %}
        <tr>
            <td style="width:50px;padding:5px;text-align:center;">
                <input type="radio" name="przycisk" value="{{ person[0] }}">
            </td>
            <td>{{ person[1] }}</td>
            <td>{{ person[2] }}</td>

        </tr>
        {% endfor %}
        </table>
    </form>

{% endblock %}