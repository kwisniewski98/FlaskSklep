{% extends "html/base.html.j2" %}

{% block content %}
    <h1>Zaloguj</h1>
    <form action="" method="post" novalidate>
        {{ form.hidden_tag() }}
        <p>
            {{ form.name.label }}<br>
            {{ form.name(size=32) }}
        </p>
        <p>
            {{ form.net_price.label }}<br>
            {{ form.net_price(size=32) }}
        </p>
        <p>
            {{ form.vat.label }}<br>
            {{ form.vat(size=32) }}
        </p>

        <p>{{ form.submit() }}</p>
    </form>
{% endblock %}