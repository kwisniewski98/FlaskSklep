{% extends "html/base.html.j2" %}

{% block content %}

    {% with messages = get_flashed_messages() %}
    {% if messages %}
        <ul class=flashes>
        <li>{{ messages[0] }}</li>
        </ul>
    {% endif %}
    {% endwith %}
    <h1>Dodaj podukt</h1>
    <form action="" method="post" novalidate>
        {{ form.hidden_tag() }}
        <p>
            {{ form.name.label }}<br>
            {{ form.name(size=32) }}
        </p>
        <p>
            {{ form.net_price.label }}<br>
            {{ form.net_price(size=32) }}
        </p>
        <p>
            {{ form.vat.label }}<br>
            {{ form.vat(size=32) }}
        </p>

        <p>{{ form.submit() }}</p>
        </form>

{% endblock %}