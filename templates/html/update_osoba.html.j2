{% extends "html/base.html.j2" %}

{% block content %}

    {% with messages = get_flashed_messages() %}
        {% if messages %}
            <ul class=flashes>
            <li>{{ messages[0] }}</li>
            </ul>
        {% endif %}
    {% endwith %}

    <h1>Update Osoba</h1>
    <form action="" method="post" novalidate>
        {{ form.hidden_tag() }}
        
        <p>
            {{ form.name.label }}<br>
            {{ form.name(size=32) }}
        </p>
        
        <p>
            {{ form.last_name.label }}<br>
            {{ form.last_name(size=32) }}
        </p>

        <p>{{ form.submit() }}</p>
    </form>
{% endblock %}