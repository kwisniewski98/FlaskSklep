{% extends "html/base.html.j2" %}

{% block content %}
    <h1>Update Uzytkownika</h1>
    <form action="" method="post" novalidate>
        {{ form.hidden_tag() }}
        
        <p>
            {{ form.username.label }}<br>
            {{ form.username(size=32) }}
        </p>
        
        <p>
            {{ form.password.label }}<br>
            {{ form.password(size=32) }}
        </p>

        <p>
            {{ form.typ.label }}<br>
            {{ form.typ(size=32) }}
        </p>

        <p>{{ form.submit() }}</p>
    </form>
{% endblock %}